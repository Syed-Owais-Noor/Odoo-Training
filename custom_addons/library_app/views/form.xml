<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="library_book_view_form" model="ir.ui.view">
        <field name="name">library.book.view.form</field>
        <field name="model">library.book</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button string="Publish" name="action_publish" type="object" class="oe_highlight" />

                    <field name="state" widget="statusbar" statusbar_visible="draft,publish"/>
                </header>

                <sheet>
                    <field name="image" widget="image" class="oe_avatar" options="{'preview_image': 'avatar_128'}"/>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1><field name="name" class="oe_inline" required="1" /></h1>
                    </div>

                    <group>
                        <group name="library_book_col_1">
                            <field name="publisher_id" string="Publisher" options="{'no_create': True, 'no_edit': True, 'no_open': True}" required="1" />
                            <field name="date_published" />
                        </group>
                        <group name="library_book_col_2">
                            <field name="auther_ids" string="Authors" widget="many2many_tags" options="{'no_create': True, 'no_edit': True, 'no_open': True}" required="1" />
                            <field name="isbn" />
                            <field name="active" invisible="1" />
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

</odoo>
